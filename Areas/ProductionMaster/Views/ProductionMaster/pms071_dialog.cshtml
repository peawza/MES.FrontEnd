@inject IMessageLocalizer localizer



<div id="window-dialog" style="align-items: center; ">

    <div class="card">
        <div class="card-body">

            <div class="row form-group justify-content-start">
                <input type="hidden" id="status-mode" value="" />

                <div class="col-lg-3 col-md-6 col-sm-12 mt-2 mb-2">
                    <label for="ip-stop-reason-code" class="col-form-label text-left text-md-start w-100">
                        @Resources["PMS071", "IP001"] <span class="text-color-red"> *</span>
                    </label>
                    <input id="ip-stop-reason-code" name="ip-stop-reason-code" required validationMessage="@localizer["FieldRequired",@Resources["PMS071", "IP001"]]" maxlength="50" />
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 mt-2 mb-2">
                    <label for="ip-stop-reason-name" class="col-form-label text-left text-md-start w-100">
                        @Resources["PMS071", "IP002"] <span class="text-color-red"> *</span>
                    </label>
                    <input id="ip-stop-reason-name" name="ip-stop-reason-name" required validationMessage="@localizer["FieldRequired",@Resources["PMS071", "IP002"]]" maxlength="250" />
                </div>
                <div class="col-lg-2 col-md-6 col-sm-12 mt-2 mb-2">
                    <label for="ip-status" class="col-form-label text-left text-md-start w-100">
                        @Resources["PMS071", "IP003"]
                    </label>
                    <input id="ip-status" name="ip-status" />
                </div>
            </div>
        </div>
    </div>
</div>





